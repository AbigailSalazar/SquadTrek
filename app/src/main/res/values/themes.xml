<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SquadTrek" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorAccent">@color/azul_fuerte</item>
        <item name="colorPrimary">@color/azul_fuerte</item>
        <item name="colorPrimaryVariant">@color/azul_marino</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/azul_blanco</item>
        <item name="colorSecondaryVariant">@color/azul_blanco</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColorHighlight">@color/azul_fuerte</item>
        <item name="dialogTheme">@style/MyDialogTheme</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="buttonEventDay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">82dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">@dimen/body_text</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/azul_marino</item>
        <item name="textAllCaps">false</item>
        <item name="android:drawablePadding">-20dp</item>
        <item name="android:drawableLeft">@drawable/ic_calendar</item>
        <item name="android:padding">22dp</item>
        <item name="fontFamily">@font/montserrat_bold</item>

    </style>
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/azul_fuerte</item>

        <item name="colorPrimary">@color/azul_fuerte</item>
        <item name="android:editTextColor">@color/azul_fuerte</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/azul_marino</item>
        <item name="android:textColor">@color/azul_marino</item>
        <!-- Used for the background -->
    </style>
    <style name="CalenderViewCustom" parent="Theme.SquadTrek">
        <item name="colorAccent">@color/azul_fuerte</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/azul_marino</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="customEditText" parent="android:Widget.Material.EditText">
        <item name="backgroundTint">@color/azul_fuerte</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>
    <style name="WeekDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/azul_marino</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
    </style>

    <style name="DayCustomText" parent="android:TextAppearance.Medium">
        <item name="android:textSize">@dimen/body_text</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/calendar_day_selector</item>
    </style>

    <style name="CalendarViewMonthText" parent="android:TextAppearance.DeviceDefault.Medium">
        <item name="android:textColor">@color/azul_marino</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>
</resources>