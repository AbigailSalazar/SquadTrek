<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_location_2" />

            <TextView
                android:id="@+id/tu_viaje_lugar_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/guadalajara_jalisco"
                android:textSize="@dimen/body_text"
                android:textColor="@color/azul_marino"
                android:fontFamily="@font/montserrat_semibold"
                 />

            <ImageView
                android:id="@+id/btnEditUbicacion"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/ic_edit" />
        </LinearLayout>


        <ImageView
            android:id="@+id/tu_viaje_imagen_iv"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:clipToOutline="true"
            android:scaleType="fitXY"
            android:src="@drawable/guadalajara" />

        <TextView
            android:id="@+id/fechas_tu_viaje"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:text="@string/fechas"
            android:textColor="@color/azul_marino"
            android:textSize="@dimen/subtitle_size"
            android:layout_marginBottom="7dp"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_marginLeft="11dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <TextView
                android:id="@+id/tu_viaje_rango_fechas_tv"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/rango_fecha1"
                android:textColor="@color/azul_marino"
                android:textSize="@dimen/body_text"
                android:layout_marginLeft="11dp"
                android:fontFamily="@font/montserrat_regular"
                />
            <ImageView
                android:id="@+id/btnEditFechas"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/ic_edit" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="45dp"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/friends"
                android:textColor="@color/azul_marino"
                android:textSize="@dimen/subtitle_size"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/montserrat_semibold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="45dp"
                android:orientation="horizontal">


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:fillViewport="true">

                    <LinearLayout
                        android:id="@+id/amigos_tu_viaje_ly"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btnAddFriends"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:elevation="5dp"
                            android:layout_margin="10dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/round_button_white"
                            android:src="@drawable/ic_add"/>

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>