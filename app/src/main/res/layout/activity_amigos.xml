<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Amigos">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">
            <include layout="@layout/activity_app_bar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/friends"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/azul_marino"
                android:textSize="@dimen/title_size"
                android:fontFamily="@font/montserrat_bold"
                android:paddingBottom="35dp"
                />

            <ListView
                android:id="@+id/amigos_lv"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:divider="@null"
                android:paddingBottom="120dp"
                android:layout_width="match_parent">

            </ListView>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnAgergarAmigos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_button_icon"
            android:drawableLeft="@drawable/ic_add"
            android:drawablePadding="11dp"
            android:fontFamily="@font/montserrat_semibold"
            android:padding="11dp"
            android:text="@string/agrega_amigos"
            android:textAllCaps="false"
            android:textColor="@color/azul_fuerte"
            android:textSize="@dimen/subtitle_size" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
        <include layout="@layout/activity_nav_bar"/>
    </RelativeLayout>
</RelativeLayout>